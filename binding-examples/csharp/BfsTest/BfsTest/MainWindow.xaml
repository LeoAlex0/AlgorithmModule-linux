<Window
  x:Class="BfsTest.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:BfsTest"
  mc:Ignorable="d"
  Title="MainWindow"
  Height="350"
  Width="525">
  <Grid>
    <TextBox
      Name="textData"
      HorizontalAlignment="Center"
      Height="225"
      AcceptsReturn="True"
      Text="0 0 0"
      VerticalAlignment="Top"
      Width="265"
      Margin="0,35,0,0" />
    <Button
      Name="buttonEscape"
      Content="Escape"
      HorizontalAlignment="Center"
      VerticalAlignment="Bottom"
      Width="75"
      Margin="0,0,0,35" 
      MouseRightButtonUp="buttonEscapeRightClick"
      Click="buttonEscapeClick"/>

  </Grid>
</Window>
